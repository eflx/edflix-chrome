{
  "manifest_version": 2,
  "name": "EdFlix",
  "description": "Converting the EdFlix extension to popup",
  "version": "0.1",
  "background": {
    "scripts": [ "background.js" ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
  "browser_action": {
    "default_icon": "edflix.png",
    "default_popup": "edflix.html"
  },
  "permissions": [ "storage", "tabs" ],
  "web_accessible_resources": [ "templates/*" ]
}
